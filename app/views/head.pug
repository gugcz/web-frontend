doctype html
html
  head
    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Import Roboto font
    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
    // Global compressed styles
    link(type='text/css', rel='stylesheet', href='/public/css/styles.css', media='screen,projection')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title GUG.cz - #{title}
  body

.navbar-fixed
  nav
    .nav-wrapper.container
      a.brand-logo(href='/')
        picture
          source(type='image/svg+xml', srcset='/public/images/logos/logo-gug.svg')
          img(src='/public/images/logos/logo-gug.png', alt='Logo GUG.cz')
        ul.right.hide-on-med-and-down
          li
            a(href='/events') Events

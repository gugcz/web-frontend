mixin link(type, url)
  .col.s2
    a(href=url,target='_blank')
      if type === 'web'
        i.grey-text.fa.fa-2x.fa-globe(aria-hidden='true')
      else if type === 'twitter'
        i.grey-text.fa.fa-2x.fa-twitter(aria-hidden='true')
      else if type === 'google-plus'
        i.grey-text.fa.fa-2x.fa-google-plus(aria-hidden='true')
      else if type === 'facebook'
        i.grey-text.fa.fa-2x.fa-facebook(aria-hidden='true')
      else if type === 'meetup'
        i.grey-text.fa.fa-2x.fa-meetup(aria-hidden='true')
      else if type === 'google-directory'
        i.grey-text.fa.fa-2x.fa-google(aria-hidden='true')
      else if type === 'blog'
        i.grey-text.fa.fa-2x.fa-rss(aria-hidden='true')
      else
        i.grey-text.fa.fa-2x.fa-link(aria-hidden='true')

mixin link-large(type, url)
  .col.s2
    a(href=url,target='_blank')
      if type === 'web'
        i.grey-text.fa.fa-2x.fa-globe(aria-hidden='true').medium
      else if type === 'twitter'
        i.grey-text.fa.fa-2x.fa-twitter(aria-hidden='true').medium
      else if type === 'google-plus'
        i.grey-text.fa.fa-2x.fa-google-plus(aria-hidden='true').medium
      else if type === 'facebook'
        i.grey-text.fa.fa-2x.fa-facebook(aria-hidden='true').medium
      else if type === 'meetup'
        i.grey-text.fa.fa-2x.fa-meetup(aria-hidden='true').medium
      else if type === 'google-directory'
        i.grey-text.fa.fa-2x.fa-google(aria-hidden='true').medium
      else if type === 'blog'
        i.grey-text.fa.fa-2x.fa-rss(aria-hidden='true').medium
      else
        i.grey-text.fa.fa-2x.fa-link(aria-hidden='true').medium

mixin links-row-large(links)
  ul.row
    if links.length === 6
      each link in links
        +link-large(link.type, link.url)
    else if links.length === 5
      .col.offset-s1
      each link in links
        +link-large(link.type, link.url)
    else if links.length === 4
      .col.offset-s2
      each link in links
        +link-large(link.type, link.url)
    else if links.length === 3
      .col.offset-s3
      each link in links
        +link-large(link.type, link.url)
    else if links.length === 2
      .col.offset-s4
      each link in links
        +link-large(link.type, link.url)

mixin links-row(links)
  ul.row
    if links
      if links.length === 6
        each link in links
          +link(link.type, link.url)
      else if links.length === 5
        .col.offset-s1
        each link in links
          +link(link.type, link.url)
      else if links.length === 4
        .col.offset-s2
        each link in links
          +link(link.type, link.url)
      else if links.length === 3
        .col.offset-s3
        each link in links
          +link(link.type, link.url)
      else if links.length === 2
        .col.offset-s4
        each link in links
          +link(link.type, link.url)
      else if links.length === 1
        .col.offset-s5
        each link in links
          +link(link.type, link.url)

